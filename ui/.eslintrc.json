{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-console": "error",
        "no-template-curly-in-string": "error",
        "no-alert":"error",
        "no-debugger":"error",
        "no-empty-function":"error",
        "vars-on-top":"error",
        "no-case-declarations": "off",
        "eqeqeq": 2,
        "no-undef": "off",
        "max-len":
            ["error", { "code": 120 }]
        ,
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/display-name": [
            "off",
            { "ignoreTranspilerName": true }
        ],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
}